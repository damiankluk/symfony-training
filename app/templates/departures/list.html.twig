{# templates/departures/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Departures{% endblock %}

{% block body %}
    <table>
        <thead>
        <tr>
            <th>Line</th>
            <th>Destination</th>
            <th>Departure Time</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for departure in departures %}
            <tr data-stop="{{ departure.stop }}">
                <td>{{ departure.line }}</td>
                <td>{{ departure.destination }}</td>
                <td>{{ departure.time}}</td>
                <td>
                    <button class="add-button">+</button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No departures found for this route.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h3>Selected Departures</h3>
    <div id="selected-departures">
        <table>
            <thead>
            <tr>
                <th>Line</th>
                <th>Destination</th>
                <th>Departure Time</th>
            </tr>
            </thead>
            <tbody>
            {% for savedDeparture in savedDepartures %}
                <tr>
                    <td>{{ savedDeparture.busLine }}</td>
                    <td>{{ savedDeparture.destination }}</td>
                    <td>{{ savedDeparture.time }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No saved departures found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
